<%- include('../includes/head.ejs') %>

     <link rel="stylesheet" href="/stylesheets/orders.css">

 </head>

<body>

     <%- include("../includes/navbar") %>

     <main class = "order-container">

         <% if (orders.length <= 0) { %>

             <h1>Brak zamówień </h1>

         <% } else { %>

                 <div class = "orders-header">
                      Twoje zamówienia!
                 </div>


                 <% orders.forEach(order => { %>

                         <h4>Numer zamówienia <i>  <%= order._id %> </i></h4>
 
                             <% order.products.forEach(p => { %>

                                 <div class = "products-container"> 
                                     <span class="orders-products-item">Zamówiony produkt : <i>  <%= p.product.title %> ( <%= p.quantity %> ) </i></span> 
                                 </div> 

                             <% }); %>

                 <% }); %>
            
                 <% for(let i = 0; i < orders.length; i++) {  %>
                     
                     <div class = "confirmation"> 

                         <a href= "/zamowienia/<%= orders[i]._id %>">Pełne potwierdzenie zamówienia - <%= orders[i]._id %> </a>
                         
                     </div>

                 <% } %>
         <% } %>

    </main>

