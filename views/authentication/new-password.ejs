<body>

     <main>

<%= include("../partials/messages.ejs") %> 

         <div class = "reset-container">

             <h2>  Wprowadź nowe hasło! </h2>

         </div>

         <form action = "/new-password" method = "POST" id = "form">
        
             <input  type    = "password" name = "password" id = "password" placeholder = "Nowe hasło"
                     onkeyup = " passwordValidation(); passwordValidation.passwordLength()" >

            <input   type    = "password" name = "confirmPassword" id = "confirmPassword" placeholder = " Potwierdzenie nowego hasła"
                     onkeyup = "  passwordValidation();  passwordValidation.passwordEqual()">
            </br>

            <button type = "submit" class = "btn-password">Zaaktualizuj hasło</button>

            <input name = "userId" type        = "hidden" value = "<%= userId %>">
            <input name = "passwordToken" type = "hidden" value = "<%= passwordToken %>">
            <input name = "_csrf" type         = "hidden" value = "<%= csrfToken %>">
            
        </form>
        
    </main>



<script type = "text/javascript" src="/scripts/validation-password.js"></script>

